@{
    ViewBag.Title = "Catalogue";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@model ProTruck.ViewModel.CatalogueModel

<!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container">
            <h1 style = "color:green" class="display-3 mb-3 animated slideInDown">Catalogue</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a class="text-body" href="/Home/Index">Home</a></li>
                    <li style = "color:green" class="breadcrumb-item active" aria-current="page">Catalogue</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Product Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-0 gx-5 align-items-end">
                <div class="col-lg-6">
                    <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                        <h1 class="display-5 mb-3">Our Catalogue</h1>
                        <p>This is our catalog with top trucks from all the existing tractors</p>
                    </div>
                </div>
            </div>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">

                        @foreach (var item in Model.Trucks)
                        {
                            <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="product-item">
                                <div class="position-relative bg-light overflow-hidden">
                                    <img class="img-fluid w-100" src="@Url.Action("GetImage", "Home",new { id =  item.id})" alt="">
                                </div>
                                <div class="text-center p-4">
                                    <a class="d-block h5 mb-2" href="/Home/Details?id=@item.id">@item.brand</a>
                                    <span class="text-primary me-1">@item.model</span>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="w-100 text-center border-end py-2">
                                        <a class="text-body" href="/Home/Details?id=@item.id"><i class="fa fa-eye text-primary me-2"></i>View detail</a>
                                    </small>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Product End -->


    