@{
    ViewBag.Title = "Login";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@model ProTruck.ViewModel.LoginModel

<!-- Page Header Start -->
    <div class="container-fluid page-header wow fadeIn mb-5" data-wow-delay="0.1s">
        <div class="container">
            <h1 style = "color:green" class="display-3 mb-3 animated slideInDown">Login</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb mb-0">
                    <li  class="breadcrumb-item"><a class="text-body" href="/Home/Index">Home</a></li>
                    <li style = "color:green" class="breadcrumb-item  active" aria-current="/Home/Login">Login</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->

    <center><form action="/Home/Login" method="post">
        <div class="col-lg-6">
                    <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                        <h1 class="display-5 mb-3">Login form</h1>
                        <p>When you log into your account youll get access to all your favourite trucks.</p>
                    </div>
                </div>
                            <div class="col-12 mb-3">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="model.username" name = "model.username" placeholder="Username">
                                    <label for="subject">Username</label>
                                    @Html.ValidationMessageFor(model => model.username)
                                </div>
                            </div>
                            <div class="col-12 mb-3">
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="model.password" name = "model.password" placeholder="Password">
                                    <label for="subject">Password</label>
                                    @Html.ValidationMessageFor(model => model.password)
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary rounded-pill py-3 px-5" type="submit">Login</button>
                            </div>
</form></center>